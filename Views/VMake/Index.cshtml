
@{
    ViewData["Title"] = "Administration view for Manufacturer of the Veichles";
}
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Veichle List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="VMake" class="btn btn-info form-control text-white">
            Add new Manufacturer
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Maker</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (VMake item in Model.MakeItems)
            {
                <tr>
                    <td>@item.MakeName</td>
                    <td>
                        <a type="button" class="btn btn-primary" asp-action="Edit">Edit</a> <p> / </p>
                        <a type="button" class="btn btn-danger" asp-action="Delete"> Delete </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
